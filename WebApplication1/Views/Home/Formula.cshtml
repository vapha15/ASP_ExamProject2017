@model WebApplication1.Models.Persons
@{
    ViewBag.Title = "Formula Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Header"]</h1>
<h2>@ViewData["Info"]</h2>


@using (Html.BeginForm("Submit", "Home", FormMethod.Post))
{
    <div class="row">
        <div class="col-lg-4">
            @Html.LabelFor(m => m.FirstName)
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "fx Hanne", autofocus = "autofocus" })
            @Html.ValidationMessageFor(x => x.FirstName)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            @Html.LabelFor(m => m.SurName)
            @Html.TextBoxFor(m => m.SurName, new { @class = "form-control", @placeholder = "fx Hansen", autofocus = "autofocus" })
            @Html.ValidationMessageFor(x => x.SurName)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            @Html.LabelFor(m => m.BirthDay)
            @Html.TextBoxFor(m => m.BirthDay, new { @class = "form-control", @placeholder = "fx 01-01-2017", autofocus = "autofocus" })
            @Html.ValidationMessageFor(x => x.BirthDay)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            @Html.LabelFor(m => m.Phone)
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @placeholder = "fx 88888888", autofocus = "autofocus" })
            @Html.ValidationMessageFor(x => x.Phone)
        </div>

    </div>
    <div class="row">
        <div class="col-lg-4">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "fx Hanne@hotmail.com", autofocus = "autofocus" })
            @Html.ValidationMessageFor(x => x.Email)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            @Html.LabelFor(m => m.SerialNumber)
            @Html.TextBoxFor(m => m.SerialNumber, new { @class = "form-control", @placeholder = "fx 55", autofocus = "autofocus" })
            @Html.ValidationMessageFor(x => x.SerialNumber)
        </div>
    </div>


    <div class="row">
        <div class="col-lg-8">
            <button type="submit" class="btn btn-primary btn-md">Submit</button>
        </div>
    </div>
    @section scripts
        {

        <script src="~/js/jquery.validate.js"></script>

    }


}